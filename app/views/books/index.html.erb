<!DOCTYPE html>

<html>
  <head> 
  </head>

  <body>
    <p id ="notice"></p>
  
    <h1>Books</h1>
  
    <table>
      <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
      
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "show", book_path(book.id) %></td>
          <td><%= link_to "edit", edit_book_path(book) %></td>
          <td><%= link_to "destroy", book, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  
    <h2>New book</h2>



  <%= form_with model: @book, url: '/books', method: :post do |f| %>

      <h4>Title</h4>
      <%= f.text_area :title %>
    
      <h4>Body</h4>
      <%= f.text_area :body %>
    
      <%= f.submit 'Create Book' %>

  <% end %>

  <% if @books.present? && @books.any? {|book|book.errors.any?} %>
    <ul>
      <% @books.each do |book| %>
       <% if book.erroes.any? %>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       <% end %>
      <% end %>
    </ul>
  <% end %>
  </body>

</html>
