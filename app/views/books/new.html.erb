<%= form_with model: @books, url: '/books', method: :post do |f| %>

    <h4>Title</h4>
    <%= f.text_area :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>

<% end %>

<% if @books.any? {|book|book.errors.any?} %>
  <%= @books.count {|book|book.errors.any?} %>件のエラーが発生しました
  <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
<% end %>